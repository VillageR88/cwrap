{
  "head": {
    "title": "Blog preview card",
    "meta": [
      {
        "name": "viewport",
        "content": "width=device-width, initial-scale=1.0"
      },
      {
        "charset": "UTF-8"
      },
      {
        "name": "description",
        "content": "A preview card for a blog post."
      },
      {
        "name": "keywords",
        "content": "blog, preview, card, HTML, CSS"
      }
    ]
  },
  "fonts": [
    {
      "font-family": "Figtree",
      "src": "url('static/fonts/Figtree-VariableFont_wght.ttf') format('truetype')",
      "font-display": "swap"
    },
    {
      "font-family": "FigtreeExtraBold",
      "src": "url('static/fonts/Figtree-ExtraBold.ttf') format('truetype')",
      "font-display": "swap"
    }
  ],
  "root": {
    "--color-titanium-white": "#ffffff",
    "--color-midnight-black": "#000000",
    "--color-cadmium-yellow": "#ffef00"
  },
  "element": "body",
  "style": "background-color: #f4d04e; display: flex; align-items: center; justify-content: center; font-family: 'Figtree', sans-serif;;",
  "mediaQueries": [
    {
      "query": "max-width: 768px",
      "style": ""
    },
    {
      "query": "max-width: 640px",
      "style": ""
    }
  ],
  "children": [
    {
      "element": "main",
      "style": "width: 384; height: 522; background-color: white; border: 1px solid black; border-radius: 20px; display: flex; justify-content: center; padding: 24px; box-sizing: border-box; flex-direction: column;",
      "children": [
        {
          "element": "img",
          "attributes": {
            "src": "./static/images/illustration-article.svg",
            "width": "336",
            "height": "200"
          },
          "style": "border-radius: 10px;"
        },
        {
          "element": "div",
          "style": "",
          "children": [
            {
              "element": "h1",
              "style": "font-size: 14px; font-weight: bolder;",
              "text": "Learning"
            }
          ]
        }
      ]
    }
  ]
}